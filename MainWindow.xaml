<Page
    x:Class="EscapeRoom.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="White">

    <Grid x:Name="RootGrid" Padding="24" RowDefinitions="Auto,*,Auto">

        <StackPanel x:Name="HeaderPanel" Spacing="6">
            <TextBlock Text="ESCAPE ROOM" FontSize="28" FontWeight="SemiBold"/>
        </StackPanel>

        <StackPanel x:Name="MenuPanel"
                    Grid.Row="1"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Spacing="16">
            <Button x:Name="PlayButton"
                    Content="Play"
                    Click="PlayButton_Click"
                    Width="220" Height="48"/>
            <Button x:Name="QuitButton"
                    Content="Quit"
                    Click="QuitButton_Click"
                    Width="220" Height="40"/>
        </StackPanel>

        <TextBlock x:Name="FooterText"
                   Grid.Row="2"
                   Text="Play để bắt đầu | Quit để thoát"
                   Opacity="0.7"/>

        <Frame x:Name="RootFrame"
               Grid.RowSpan="3"
            Background="White"
            Visibility="Collapsed"/>
    </Grid>
</Page>
