<Page
    x:Class="EscapeRoom.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="Transparent">

    <Page.Resources>
        <LinearGradientBrush x:Key="AppGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#0A000000" Offset="0"/>
            <GradientStop Color="#12000000" Offset="1"/>
        </LinearGradientBrush>

        <Style x:Key="CardBorderStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="28"/>
            <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
            <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Shadow">
                <Setter.Value>
                    <ThemeShadow/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource AccentButtonStyle}">
            <Setter Property="Width" Value="240"/>
            <Setter Property="Height" Value="52"/>
        </Style>
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource DefaultButtonStyle}">
            <Setter Property="Width" Value="240"/>
            <Setter Property="Height" Value="44"/>
        </Style>
    </Page.Resources>

    <Grid x:Name="RootGrid" Padding="24">
        <!-- Nền gradient -->
        <Rectangle Fill="{StaticResource AppGradient}"/>

        <Grid x:Name="LandingGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Spacing="6">
                <TextBlock Text="ESCAPE ROOM" FontSize="32" FontWeight="SemiBold"/>
                <TextBlock Text="Một trò chơi puzzle nho nhỏ" Opacity="0.72"/>
            </StackPanel>

            <Border Grid.Row="1"
                    Style="{StaticResource CardBorderStyle}"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Translation="0,0,16">
                <StackPanel Spacing="16" HorizontalAlignment="Center">
                    <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center">
                        <SymbolIcon Symbol="Play" Width="32" Height="32"/>
                        <TextBlock Text="Sẵn sàng vào trò chơi?" FontSize="20" FontWeight="SemiBold"/>
                    </StackPanel>

                    <TextBlock Text="Nhấn Play để bắt đầu, hoặc Quit để thoát."
                               Opacity="0.72"
                               HorizontalAlignment="Center"/>

                    <!-- MenuPanel: giữ nguyên tên để code-behind truy cập -->
                    <StackPanel x:Name="MenuPanel" Spacing="12" HorizontalAlignment="Center">
                        <Button x:Name="PlayButton"
                                Content="Play"
                                Click="PlayButton_Click"
                                Style="{StaticResource PrimaryButton}"/>
                        <Button x:Name="QuitButton"
                                Content="Quit"
                                Click="QuitButton_Click"
                                Style="{StaticResource SecondaryButton}"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <TextBlock Grid.Row="2"
                       Text="Play để bắt đầu | Quit để thoát"
                       Opacity="0.7"/>
        </Grid>

        <Frame x:Name="RootFrame"
               Background="Transparent"
               Visibility="Collapsed"/>
    </Grid>
</Page>
