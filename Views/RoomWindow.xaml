<Window
    x:Class="EscapeRoom.Views.RoomWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Room">

    <StackPanel x:Name="RootLayout" VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="12">
        <Image x:Name="PuzzleImage"
               Width="300" Height="200"
               Stretch="Uniform"
               HorizontalAlignment="Center"
               Margin="0,0,0,20"/>
        
        <TextBlock x:Name="PuzzleText"
                   Text="Puzzle Question"
                   FontSize="20"
                   FontWeight="SemiBold"
                   TextAlignment="Center"
                   Margin="0,0,0,20"/>

        <Button x:Name="BtnA" Click="AnswerA_Click" Width="300" Height="40"/>
        <Button x:Name="BtnB" Click="AnswerB_Click" Width="300" Height="40"/>
        <Button x:Name="BtnC" Click="AnswerC_Click" Width="300" Height="40"/>
    </StackPanel>
</Window>
