<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="EscapeRoom.Views.EndWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Transparent">

    <StackPanel VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Spacing="20">

        <TextBlock Text="Oh no! You've encountered a dead end!"
                   FontSize="24"
                   FontWeight="Bold"
                   TextAlignment="Center"
                   HorizontalAlignment="Center"
                   Margin="20"/>

        <Image x:Name="DeadEndImage"
               Width="200"
               Height="200"
               HorizontalAlignment="Center"
               Margin="20"/>

        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Spacing="12">
            <Button x:Name="BtnMainMenu"
                    Content="Exit to Main Menu"
                    Padding="16,8"
                    Click="toMainWindow_button"/>
            <Button x:Name="BtnQuit"
                    Content="Quit"
                    Padding="16,8"
                    Click="exit_button"/>
        </StackPanel>
    </StackPanel>
</Page>
